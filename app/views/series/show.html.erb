<h1>Series: <%= @series.title %></h1>

<h2>Books:</h2>

<!--This line renders books/_book.html.erb-->
<%#= render @series.books %>

<table>
  <tr>
    <th>Book Number</th>
    <th>Year Published</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.book_number %></td>
      <td><%= book.year_published %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<h2>Add a book:</h2>

<%= render partial: 'books/form', locals: {model: [@series, @series.books.new]} %>

<p>
  <%= link_to 'Add a book', new_series_book_path(@series) %>
</p>

<p>
  <%= link_to 'Back', series_index_path %>
</p>
