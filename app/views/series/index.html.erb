<h1>Listing Series</h1>

<p>
  <%= link_to 'Add Series', new_series_path %>
</p>
<div class="border rounded p-1">
  <div class="card-deck">
    <% @series_all.each do |series| %>
      <div class="card">
        <img class="card-img-top">
          <% if series.books.count > 0 %>
            <% if series.books.first.pages.first.picture.attached? %>
              <%= link_to series_path(series) do %>
                <%= image_tag series.books.first.pages.first.picture, class: "img-fluid" %>
              <% end %>
            <% end %>
          <% end %>
        </img>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-center mt-auto"><%= series.title %></h5>
        </div>
      </div>
    <% end %>
  </div>

</div>



