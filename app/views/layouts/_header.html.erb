<nav class="navbar d-flex">

  <div class="ml-3">
    <%= link_to "Liánhuánhuà", root_path, id: "logo", class: "navbar-brand" %>
  </div>
  <div class="ml-3">
    <%= link_to "Browse", controller: "/series" %>
  </div>

  <div class="ml-3 flex-grow-1">
    <%= bootstrap_form_with(url: search_path, method: 'get', layout: :inline, local: true) do |form| %>
      <%= form.text_field :search, hide_label: true %>
      <%= form.button(class: "btn btn-primary ml-2") do %>
        <%= fa_icon("search", text: "search") %>
      <% end %>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="mr-3 ml-auto">
      <%= current_user.email %>
    </div>
    <div class="mr-3 ml-auto">
      <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    </div>
  <% else %>
    <div class="mr-3 ml-auto">
      <%= link_to "Log In", new_user_session_path %>
    </div>
    <div class="mr-3 ml-auto">
      <%= link_to "Sign Up", new_user_registration_path %>
    </div>
  <% end %>

</nav>