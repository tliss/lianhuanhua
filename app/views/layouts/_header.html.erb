<nav class="navbar d-flex justify-content-between">

  <div class="row">
    <div class="ml-3">
      <%= link_to "Liánhuánhuà", root_path, id: "logo", class: "navbar-brand" %>
    </div>
    <div class="ml-3">
      <%= link_to "Browse Series", controller: "series" %>
    </div>

    <div class="ml-3">
      <%= form_with url: search_path, method: 'get', local: true do |form| %>
        <p>
          <%= form.text_field :search %>
          <%#= form.submit 'Search'%>
          <%#= form.button(:class => "btn btn-primary") do %>
          <%= form.button do %>
            <%= fa_icon("search", :text => "search") %>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% if user_signed_in? %>
      <div class="mr-3">
        <p><%= current_user.email %></p>
      </div>
      <div class="mr-3">
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
      </div>
    <% else %>
      <div class="mr-3">
        <%= link_to "Log In", new_user_session_path %>
      </div>
      <div class="mr-3">
        <%= link_to "Sign Up", new_user_registration_path %>
      </div>
    <% end %>
  </div>

</nav>